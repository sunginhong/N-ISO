<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical|center_horizontal|center_vertical"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:fontFamily="@font/noto_serif_bold"
                android:letterSpacing="0"
                android:singleLine="true"
                android:text="N-Interaction"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="40sp" />

            <View
                android:id="@+id/splash_border"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="-3dp"
                android:background="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_gravity="bottom"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="0"
            android:singleLine="true"
            android:text="â“’ Interactive Studio 2019 ALL RIGHTS RESERVED"
            android:textAlignment="center"
            android:textColor="@color/grey_1"
            android:textSize="12sp"
            android:layout_marginBottom="50dp"/>

    </FrameLayout>

</LinearLayout>