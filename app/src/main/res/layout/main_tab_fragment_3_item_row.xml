<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipChildren="false">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:clipChildren="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <android.support.v7.widget.CardView
                android:layout_width="320dp"
                android:layout_height="180dp"
                android:clipChildren="true"
                android:gravity="center_vertical"
                app:cardBackgroundColor="#0c000000"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/main_tab_fragment_3_item_row_imgView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="clip_vertical"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/ic_launcher" />
            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="150dp"
            android:layout_weight="0"
            android:background="@color/black_three"
            android:clipChildren="false"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="13dp"
            android:paddingBottom="20dp"
            android:translationX="20dp">

            <TextView
                android:id="@+id/main_tab_fragment_3_item_row_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/noto_serif_bold"
                android:lineSpacingExtra="7sp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="We Went to Rome" />

            <TextView
                android:id="@+id/main_tab_fragment_3_item_row_subTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/noto_sans"
                android:lineSpacingExtra="7sp"
                android:singleLine="true"
                android:textColor="@color/grey_1"
                android:textSize="16sp"
                tools:text="La Klippkroog" />

            <TextView
                android:id="@+id/main_tab_fragment_3_item_row_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/noto_sans"
                android:singleLine="true"
                android:textColor="@color/grey_2"
                android:textSize="15sp"
                tools:text="La Klippkroog" />

            <TextView
                android:id="@+id/main_tab_fragment_3_item_row_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:singleLine="true"
                android:textColor="@color/grey_1"
                android:textSize="15sp"
                tools:text="La Klippkroog" />
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>