<?xml version="1.0" encoding="utf-8"?>

<com.example.n_iso.Main_BottomFunc xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_bottom"
    android:background="@color/bottom_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/bottomMenu_item_Contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/main_bottom_circle_size"
                android:layout_centerVertical="true">

                <View
                    android:id="@+id/bottomMenu_btn_center"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true" />

                <FrameLayout
                    android:id="@+id/bottomMenu_btn_01"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="@dimen/main_bottom_padding_size"
                    android:paddingRight="@dimen/main_bottom_padding_size"
                    android:layout_alignBottom="@+id/bottomMenu_btn_04"
                    android:layout_alignParentBottom="false"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/bottomMenu_btn_02">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <View
                            android:id="@+id/bottomMenu_btn_circle_01"
                            android:layout_width="@dimen/main_bottom_circle_size"
                            android:layout_height="@dimen/main_bottom_circle_size"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circle_shape"
                            android:text="Circular Shape" />

                        <TextView
                            android:id="@+id/bottomMenu_btn_text_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans_bold"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Home"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_bottom_text_size" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bottomMenu_btn_02"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="@dimen/main_bottom_padding_size"
                    android:paddingRight="@dimen/main_bottom_padding_size"
                    android:layout_alignBottom="@+id/bottomMenu_btn_center"
                    android:layout_marginEnd="30dp"
                    android:layout_toStartOf="@+id/bottomMenu_btn_center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <View
                            android:id="@+id/bottomMenu_btn_circle_02"
                            android:layout_width="@dimen/main_bottom_circle_size"
                            android:layout_height="@dimen/main_bottom_circle_size"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circle_shape"
                            android:text="Circular Shape" />

                        <TextView
                            android:id="@+id/bottomMenu_btn_text_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans_bold"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Interaction"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_bottom_text_size" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bottomMenu_btn_03"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="@dimen/main_bottom_padding_size"
                    android:paddingRight="@dimen/main_bottom_padding_size"
                    android:layout_alignBottom="@+id/bottomMenu_btn_center"
                    android:layout_marginStart="30dp"
                    android:layout_toEndOf="@+id/bottomMenu_btn_center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <View
                            android:id="@+id/bottomMenu_btn_circle_03"
                            android:layout_width="@dimen/main_bottom_circle_size"
                            android:layout_height="@dimen/main_bottom_circle_size"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circle_shape"
                            android:text="Circular Shape" />

                        <TextView
                            android:id="@+id/bottomMenu_btn_text_03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans_bold"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Motion"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_bottom_text_size" />
                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bottomMenu_btn_04"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:paddingLeft="@dimen/main_bottom_padding_size"
                    android:paddingRight="@dimen/main_bottom_padding_size"
                    android:layout_alignBottom="@+id/bottomMenu_btn_03"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/bottomMenu_btn_03">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <View
                            android:id="@+id/bottomMenu_btn_circle_04"
                            android:layout_width="@dimen/main_bottom_circle_size"
                            android:layout_height="@dimen/main_bottom_circle_size"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/circle_shape"
                            android:text="Circular Shape" />

                        <TextView
                            android:id="@+id/bottomMenu_btn_text_04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans_bold"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="Research"
                            android:textColor="@color/white"
                            android:textSize="@dimen/main_bottom_text_size" />
                    </LinearLayout>

                </FrameLayout>

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

</com.example.n_iso.Main_BottomFunc>