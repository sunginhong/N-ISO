<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_tab_fragment_1_item_pager_item"
    android:layout_width="match_parent"
    android:layout_height="375dp"
    android:clipChildren="false"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/main_tab_fragment_1_item_pager_imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@drawable/bg_black_gradient" />

    <LinearLayout
        android:id="@+id/main_tab_fragment_1_item_pager_fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/main_tab_fragment_1_item_pager_titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/main_tab_fragment_1_item_pager_description"
            android:fontFamily="@font/noto_serif_bold"

            android:lineSpacingExtra="12sp"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:shadowColor="#33000000"
            android:shadowDy="4"
            android:shadowRadius="12"
            android:textAlignment="viewStart"
            android:textColor="#ffffff"
            android:textSize="26sp"
            tools:text="Why you should take up skateboarding" />

        <TextView
            android:id="@+id/main_tab_fragment_1_item_pager_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:layout_marginTop="20dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="travel" />

    </LinearLayout>

</RelativeLayout>
