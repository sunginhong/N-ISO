<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clipChildren="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:clipChildren="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_weight="4"
                android:clipChildren="false"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_tab_fragment_2_item_row_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/noto_serif_bold"
                    android:lineSpacingExtra="7sp"
                    android:maxLines="2"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    tools:text="We Went to Rome" />

                <TextView
                    android:id="@+id/main_tab_fragment_2_item_row_subTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:lineSpacingExtra="7sp"
                    android:textColor="@color/grey_1"
                    android:textSize="16sp"
                    android:singleLine="true"
                    tools:text="La Klippkroog" />

                <TextView
                    android:id="@+id/main_tab_fragment_2_item_row_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="@color/grey_2"
                    android:textSize="15sp"
                    android:singleLine="true"
                    tools:text="La Klippkroog" />
            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clipChildren="true"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:gravity="center_vertical"
                app:cardBackgroundColor="#0c000000">

                <ImageView
                    android:id="@+id/main_tab_fragment_2_item_row_imgView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="clip_vertical"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/ic_launcher" />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="21dp"
            android:alpha="0.5"
            android:background="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>